{
  "name": "crypto_trading_app",
  "version": "1.0.0",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "setup-flutter": "git clone https://github.com/flutter/flutter.git",
    "init-flutter": "./flutter/bin/flutter config --no-analytics && ./flutter/bin/flutter config --enable-web",
    "build-web": "./flutter/bin/flutter build web --release --web-renderer html",
    "vercel-build": "npm run setup-flutter && npm run init-flutter && ./flutter/bin/flutter pub get && npm run build-web"
  }
}
